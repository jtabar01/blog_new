<p id="notice"><%= notice %></p>
<%= render 'posts/bar' %>

<div class="wrapper center">
  <h1 class="underlined">Listing Posts</h1>
  <br/>
  <table class="table">
    <thead>
      <tr>
        <th class="ptitle">Title</th>
        <th class="pbody">Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td class="textlight"><%= post.title %></td>
          <td class="textlight"><%= post.body %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  <%= link_to 'New Post', new_post_path %>
</div>
